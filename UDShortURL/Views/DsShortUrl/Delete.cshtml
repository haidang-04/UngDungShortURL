@model UDShortURL.Models.DsShortUrl

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Inline&family=Dancing+Script:wght@400..700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Thay đổi font chữ */
            margin: 0; /* Loại bỏ margin mặc định của body */
            justify-content: center; /* Căn giữa theo chiều ngang */
            align-items: center; /* Căn giữa theo chiều dọc */
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: rgb(31, 39, 57); /* Màu nền xám nhạt */
            background-size: cover; /* Đảm bảo nền bao phủ toàn bộ */
            background-attachment: fixed; /* Giữ cố định nền khi cuộn */
            color: #333; /* Màu chữ xám đậm */
        }

        h1, h3 {
            text-align: center;
            color: #007bff;
            font-family: "Dancing Script", cursive;
            font-size: 36px;
        }

        /* CSS cho nút "Quay lại danh sách" và nút xóa */
        .btn-list, .btn-delete {
            display: inline-block;
            margin: auto;
            padding: 10px 20px;
            font-size: 20px;
            color: #fff;
            background-color: #007bff; /* Màu xanh nước biển cho nút */
            border: none;
            border-radius: 5px;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
            clip-path: polygon(0% 50%, 10% 0%, 90% 0%, 100% 50%, 90% 100%, 10% 100%); /* Tạo hình dạng cho nút, với đầu nhọn như mũi tên */
            -webkit-appearance: none; /* Loại bỏ style mặc định của button trên Safari */
            -moz-appearance: none; /* Loại bỏ style mặc định của button trên Firefox */
            appearance: none; /* Loại bỏ style mặc định của button */
        }

        
            .btn-list:hover, .btn-delete:hover {
                background-color: #0069d9; /* Màu xanh nước biển đậm hơn khi hover */
            }

        .button-container {
            text-align: center;
        }

        /* CSS cho bảng */
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            table-layout: fixed;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
            word-wrap: break-word;
            font-size: 16px;
            color: #007bff;
        }

        th {
            background-color: #f0f0f0;
        }

        /* CSS cho header */
        header {
            background-color: #007bff;
            color: #fff;
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid #0069d9;
        }

            header h2 {
                margin: 0;
                font-size: 30px;
                font-family: "Bungee Inline", cursive;
            }
        /* CSS cho container */
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

    </style>
</head>
<header>
    <h2>Trang xóa</h2>
</header>

<div class="container">
    <h3>Bạn có chắc chắn muốn xóa không? </h3>
    <div>
        
        <hr />

        <table>
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.LongUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.ShortUrl1)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.ExpiredTime)</th>
                    <th>@Html.DisplayNameFor(model => model.RedirectCount)</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td><a href="@Model.LongUrl">@Model.LongUrl</a></td>
                    <td><a href="@Model.ShortUrl1">@Model.ShortUrl1</a></td>
                    <td>@Html.DisplayFor(model => model.CreatedAt)</td>
                    <td>@Html.DisplayFor(model => model.ExpiredTime)</td>
                    <td>@Html.DisplayFor(model => model.RedirectCount)</td>
                </tr>
            </tbody>
        </table>
        <div class="button-container">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn-list" />
            <a asp-action="Index1" class="btn-list">Quay lại danh sách</a>
        </form>
        </div>
    </div>
</div>